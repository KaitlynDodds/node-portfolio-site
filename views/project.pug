extends layout.pug 

block main
    .off-canvas-content(data-off-canvas-content='')
        .title-bar.hide-for-large
            .title-bar-left
                button.menu-icon(type='button', data-toggle='my-info')
                span.title-bar-title Josh Sullivan
        
        include partials/back-bar.pug

        article.grid-container.portfolio-intro.portfolio-project
            .grid-x
                .cell.small-6.medium-9.large-9
                    //- Project name ---------------------------
                    h1 #{project.project_name}

                    //- Project description --------------------
                    p.lead.text-light
                        #{project.description}
                .cell.portfolio-meta.small-6.medium-2.large-3
                    //- List related technologies --------------
                    h6 Technologies 
                    ul
                        each technology in project.technologies
                            li= technology   
                     
                    //- Links ----------------------------------
                    a.button.expanded(href=`${project.live_link}`) Live Demo
                    a.button.expanded(href=`${project.github_link}`) GitHub Repo
            
            //- Display images for project -------------------  
            each link, index in project.image_urls 
                //- first img is always profile img 
                if (index > 0)
                    img.image(src=`../public/images/${link}`)
                
            
